<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imag1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/enter_event"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/actionName"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:hint="@string/action"
            android:maxLength="62" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/nter_date_and_time"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/schedule" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextYearMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/year"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextMonthMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/mount"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextDayMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/day"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextHourMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/hour"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextMinutesMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/min"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextSecondsMain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="@string/sec"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="@string/textViewMainInfo"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/buttonSaveEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete_event"
            android:text="@string/save_event" />

        <Button
            android:id="@+id/buttonSeeCountdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete_event"
            android:text="@string/button_see_countdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-1501215034144631/6744755337" />
    </LinearLayout>
</ScrollView>