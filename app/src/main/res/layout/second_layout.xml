<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imag1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp">

    </TextView>

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/email" />

    <TextView
        android:id="@+id/name_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="@string/time_to_your_event"
        android:textSize="25sp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/stopwatch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewYearSecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:inputType="phone"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/textViewMonthSecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewDaySecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewHourSecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:text="@string/hour"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewMinutesSecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:text="@string/min"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewSecondsSecond"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:inputType="phone"
            android:text="@string/sec"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp">

    </TextView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonDeleteEvent"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/delete_event"
        android:text="@string/delete_event" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />


</LinearLayout>